
<style type="text/css">.form-group { }</style>
@model RomanNumeralConverter.Models.HistoryLog
@{
    ViewData["Title"] = "Index";

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Arabic numbers --> Roman numeral</h2>
                <a asp-controller="Home" asp-action="History" class="btn btn-secondary" style="width: 150px">
                    History
                </a>
            </div>
        </div>
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                </div>
                <div class="mb-3">
                    <label asp-for="Input"></label>
                    <input asp-for="Input" class="form-control" placeholder="Insert your number" />
                    @Html.ValidationMessageFor(model => model.Input, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary mt-3" style="width: 150px">Convert</button>
            </div>
        </form>
    </div>
}